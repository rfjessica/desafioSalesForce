<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

    <!-- Nome -->
    <field formid="name" label="profile.name" type="string" mandatory="true" binding="name"
           max-length="50" missing-error="error.card.info.missing.namr"
           parse-error="error.message.parse.name.profile.form" range-error="error.message.50orless"
           value-error="ValueErrorText" required="" />

    <!-- E-mail -->
    <field formid="email" label="profile.email" type="string" mandatory="true" binding="email"
           max-length="50" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" missing-error="error.card.info.missing.email"
           parse-error="error.message.parse.email.profile.form" range-error="error.message.50orless"
           value-error="ValueErrorText" required="" />

    <!-- Telefone -->
    <field formid="phone" label="profile.phone" description="address.phone.example" type="string" mandatory="true"
           binding="phone" min-length="10" max-length="20" missing-error="error.card.info.missing.phone" range-error="error.message.between10and20" />

</form>
